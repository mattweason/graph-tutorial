<h1 class="mb-3">Emails</h1>
<a href="/email/new" class="btn btn-light btn-sm mb-3">Compose email</a>
<table class="table">
    <thead>
    <tr>
        <th scope="col">Organizer</th>
        <th scope="col">Subject</th>
        <th scope="col">Start</th>
        <th scope="col">End</th>
    </tr>
    </thead>
    <tbody>
    {{#each messages}}
        <tr>
            <td>{{this.sender.emailAddress.name}}</td>
            <td>{{this.sender.emailAddress.address}}</td>
            <td>{{this.subject}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>